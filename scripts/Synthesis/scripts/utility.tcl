##Â Wriite a message with specific type
proc msg {msg args} {

    set num [llength $args]
    if { $num > 0} {
        set type [lindex $args 0]
    } else {
        set type ""
    }

    if { ${type} == "star" } {
        puts "\n***********************************************************************************************"
        puts "* ${msg}"
        puts "***********************************************************************************************\n"
    } elseif { ${type} == "lines" } {
        puts "\n==============================================================================================="
        puts "  ${msg}"
        puts "===============================================================================================\n"
    } elseif {${type} == "line" } {
        puts "\n-----------------------------------------------------------------------------------------------"
        puts "  ${msg}"
        puts "-----------------------------------------------------------------------------------------------\n"
    } elseif { ${type} == "uline" } {
        puts "  ${msg}"
        puts "_______________________________________________________________________________________________\n"
    } else {
        puts " ${msg}"
    }
}

